@model Wedding2.Models.Time

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sandi &amp; Conor</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fullpage.css" />
</head>
<body>
    <header class="menu" id="myHeader">
        <div class="myHomelogo">
            <a asp-controller="Home" asp-action="Index">
                <img class="homelogo" src="~/img/pittsburgh-silhouette-skyline-gold.png" />
                @(Wedding2.Models.Time.GetDate()) days to go
            </a>
        </div>
        <div class="menu">
            <div class="menuItems">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <div class="menuItems">
                <a asp-area="" asp-controller="Travel" asp-action="Index">Travel</a>
            </div>
            <div class="menuItems">
                <a asp-area="" asp-controller="Travel" asp-action="Accomodation">Accomodation</a>
            </div>
            <div class="menuItems">
                <a asp-area="" asp-controller="Registry" asp-action="Index">Registry</a>
            </div>
            <div class="menuItems">
                <a asp-area="" asp-controller="Home" asp-action="RSVP">RSVP</a>
            </div>
        </div>
        <div id="hamburger-icon" onclick="toggleMobileMenu(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
            <ul class="mobile-menu">
                <li><a asp-area="" asp-controller="Home" asp-action="Index" onclick="enableScroll()">Home</a></li>
                <li><a asp-area="" asp-controller="Travel" asp-action="Index" onclick="enableScroll()">Travel</a></li>
                <li><a asp-area="" asp-controller="Travel" asp-action="Accomodation" onclick="enableScroll()">Accomodation</a></li>
                <li><a asp-area="" asp-controller="Registry" asp-action="Index" onclick="enableScroll()">Registry</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="RSVP" onclick="enableScroll()">RSVP</a></li>
            </ul>
        </div>

    </header>
    <div class="container">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
